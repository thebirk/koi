fn add(a, b) do return a + b;

fn Point(x, y) do return {x = x, y = y, add = Point_Add};
fn Point_Add(self, x, y) {
	self.x += x;
	self.y += y;
}

fn factorial(n) {
	if n == 1 do return n;
	else do return n * factorial(n-1);
}

fn fib(n) {
	if n <= 2 do return 1;
	else do return fib(n-1) + fib(n-2);
}

