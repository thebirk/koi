fn Point(x, y) do return {
	x = x,
	y = y,

	add = fn(self, p) {
		self.x += p.x;
		self.y += p.y;
		return Point(self.x, self.y);
	},

	pretty = fn(self) {
		print "x:";
		print self.x;
		print "y:";
		print self.y;
	}
};

